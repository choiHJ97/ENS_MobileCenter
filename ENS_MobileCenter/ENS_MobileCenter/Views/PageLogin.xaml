<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ENS_MobileCenter.Views.PageLogin"
             BackgroundImageSource="bgimg.jpg">

        <StackLayout Padding="30" Spacing="2" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" >
            <Label Text="태양광 발전소"
            FontSize="30"
                   TextColor="White" HorizontalOptions="Center"/>
            <Label Text="클라우드 모니터링 관제 시스템" 
                   TextColor="White" HorizontalOptions="Center"/>
            <Label Text="아이디" />
            <Entry x:Name="usernameEntry" Placeholder="username"/>
            <Label Text="비밀번호"/>
            <Entry x:Name="passwordEntry" IsPassword="true"/>
            <Button Text="로그인" Clicked="OnLoginButtonClicked" 
                    Opacity="0.50" />
            <Label x:Name="messageLabel" />
            <Button Text="Sign Up" Clicked="OnSignUpButtonClicked"
                    Opacity="0.50"/>
        <Image Source="Logo.png"
                   HeightRequest="100"
                   WidthRequest="200"
               HorizontalOptions="Center"/>
            
        </StackLayout>

</ContentPage>

